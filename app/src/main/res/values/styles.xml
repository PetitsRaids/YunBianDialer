<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:actionMenuTextAppearance">@style/FontStyle</item>
        <item name="android:dialogMessage">@style/FontStyle</item>
    </style>

    <style name="FontStyle">
        <item name="android:textSize">?attr/font_small</item>
    </style>

    <style name="FontStyle.Small">
        <item name="font_small">14sp</item>
        <item name="font_medium">16sp</item>
        <item name="font_large">18sp</item>
        <item name="fab_custom_size">36dp</item>
        <item name="fab_image_size">24dp</item>
    </style>

    <style name="FontStyle.Medium">
        <item name="font_small">18sp</item>
        <item name="font_medium">20sp</item>
        <item name="font_large">22sp</item>
        <item name="fab_custom_size">41dp</item>
        <item name="fab_image_size">29dp</item>
    </style>

    <style name="FontStyle.Large">
        <item name="font_small">22sp</item>
        <item name="font_medium">24sp</item>
        <item name="font_large">26sp</item>
        <item name="fab_custom_size">46dp</item>
        <item name="fab_image_size">34dp</item>
    </style>

    <style name="FontStyle.XLarge">
        <item name="font_small">26sp</item>
        <item name="font_medium">28sp</item>
        <item name="font_large">30sp</item>
        <item name="fab_custom_size">51dp</item>
        <item name="fab_image_size">39dp</item>
    </style>

    <style name="FontStyle.XXLarge">
        <item name="font_small">30sp</item>
        <item name="font_medium">32sp</item>
        <item name="font_large">34sp</item>
        <item name="fab_custom_size">56dp</item>
        <item name="fab_image_size">44dp</item>
    </style>
</resources>
